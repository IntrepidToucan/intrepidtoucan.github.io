---
import WorkHeroBanner from "../components/WorkHeroBanner.astro";
import BaseLayout from "./BaseLayout.astro";

interface Frontmatter {
  heroImg: {
    path: string;
    positionX?: string;
    positionY?: string;
  };
  title: string;
}

interface Props {
  frontmatter: Frontmatter;
}

const {
  frontmatter: { heroImg, title },
} = Astro.props;
---

<BaseLayout pageTitle={title}>
  <WorkHeroBanner
    heroImgPath={heroImg.path}
    heroImgPositionX={heroImg.positionX}
    heroImgPositionY={heroImg.positionY}
    title={title}
  />

  <slot />
</BaseLayout>

<style>
  a {
    background-color: red;
  }
</style>
