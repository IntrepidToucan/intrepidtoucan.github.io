---
import PageLayout from "@layouts/PageLayout.astro";

const MediaType = {
  COMIC: "Comic",
} as const;
---

<PageLayout pageTitle="Media Log">
  <div class="paragraphs-container">
    <p>
      A running list of all the significant media Iâ€™ve consumed since late 2024.
      My rating scale goes from 1 (awful) to 4 (amazing).
    </p>

    <table>
      <thead>
        <tr>
          <th scope="col" style="width: 180px"></th>
          <th scope="col" style="width: 180px">Creator(s)</th>
          <th scope="col" style="width: 100px">Type</th>
          <th scope="col" style="width: 100px">Finished</th>
          <th scope="col" style="width: 80px">Rating</th>
          <th scope="col">Notes</th>
        </tr>
      </thead>

      <tbody>
        <tr>
          <th scope="row">Moon Knight Vol. 1: <br />From The Dead</th>
          <td>
            <ul>
              <li>Warren Ellis (writer)</li>
              <li>Declan Shalvey (artist)</li>
              <li>Jordie Bellaire (colorist)</li>
            </ul></td
          >
          <td>{MediaType.COMIC}</td>
          <td></td>
          <td>(3)</td>
          <td></td>
        </tr>
      </tbody>
    </table>
  </div>
</PageLayout>

<style>
  td:nth-child(3),
  td:nth-child(4),
  td:nth-child(5) {
    text-align: center;
  }
</style>
