---
import clsx from "clsx";

interface Props {
  marginBottom?: boolean;
}

const { marginBottom = false } = Astro.props;
---

<blockquote class={clsx({ "with-margin-bottom": marginBottom })}>
  <slot />
</blockquote>

<style>
  blockquote {
    background-color: transparent;
    border-inline-start: var(--mm--border-width--4) solid
      var(--mm--color--neutral-0);
    border-radius: 0;
    font-family: var(--mm--font-family--serif);
    font-size: var(--mm--font-size--3);
    font-weight: var(--mm--font-weight--1);
    padding-block: var(--mm--spacing--3);
    padding-inline: var(--mm--spacing--6) var(--mm--spacing--4);
  }

  .with-margin-bottom {
    margin-block-end: var(--mm--spacing--7);
  }

  @media screen and (min-width: 481px) {
    blockquote {
      inline-size: 80%;
      margin-inline: auto;
    }
  }
</style>
